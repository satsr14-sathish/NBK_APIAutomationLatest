<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>standard</theme>
    
        <!-- enables timeline -->
        <!-- defaults to true -->
        <enableTimeline>true</enableTimeline>
	
        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>
        
        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>https</protocol>
        
        <!-- title of the document -->
        <documentTitle>API_AUTOMATION_REPORT</documentTitle>
        
        <!-- report name - displayed at top-nav -->
        <reportName>
        <![CDATA[ <img src="https://www.nbk.com/.imaging/default/dam/nbk/logo.png/jcr:content.png" id="NBK_LOGO">
            <style>
                #NBK_LOGO     {
                    position: absolute;
                    right: 60%;
                    width: 100px;
                    height: 48px;
                }
                message    {
                    position: absolute;
                    right: 40%;
                    top: 0px;
                    font-size: 19px;
                    font-weight: 1000;
                    padding: 10px;
                    padding-top: 0px;
                    padding-bottom: 0px;
                    color: #1565C0;
                }
                nav .nav-wrapper {
                    position: relative;
                    height: 100%;
                    background-color: #FFFFFFc9;
                }
            </style>
            <message>NBK DVP API Automation Report</message>  ]]>
        </reportName>

        <!-- custom javascript -->
        <scripts>
            <![CDATA[
                $(document).ready(function() {
                    
                });
            ]]>
        </scripts>
        
        <!-- custom styles -->
        <styles>
            <![CDATA[
                
            ]]>
        </styles>
    </configuration>
</extentreports>